{
  "hosting": {
    "public": "website/build",
    "ignore": [
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "functions": {
      "predeploy": [
        "npm --prefix $RESOURCE_DIR run lint"
      ],
      "source": "functions"
    }
  }
}
